{% extends 'layout.twig' %}
{% block title %} <title>Liste de tout les meetings</title>{% endblock %}

{% block content %}
    <div class="row justify-content-md-center">
        <div class="col-md-8" style="top: 10px">
            <div class="card">
                <img src="../web/thumb_{{ meeting.getId }}.jpg" alt="Card image cap" class="card-img-top">
                <div class="card-header">
                    <h4 class="card-titre"> {{ meeting.titre }}</h4>
                </div>
                <div class="card-block">
                    <p class="card-text"> Description : {{ meeting.getDesc | nl2br}} </p>
                </div>
                <div class="card-footer text-muted">
                    <h6 class="card-subtitle">{{ meeting.getStartDate.format('d-m-Y h:m') }}</h6>
                    <h6 class="card-subtitle">{{ meeting.getEndDate.format('d-m-Y h:m')  }}</h6>
                </div>
                <p><a class="btn btn-info" href="/">Retour</a></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <ul class="list-group">
                        <li class="list-group-item active">Organizers</li>
                        {% for organizer in organizers %}
                            <li class="list-group-item">
                                {{ organizer.getLastName ~' '~ organizer.getFirstName }}
                                <div class="alert alert-info"> {{ organizer.getBadge }}</div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="card-footer">
                    <ul class="list-group">
                        <li class="list-group-item active">Attendees</li>
                        {% for attendee in attendees %}
                            <li class="list-group-item"> {{ attendee.getLastName }} {{ attendee.getFirstName }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}